{
  "name": "shortcut-game",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "lefthook install && bun sync",
    "sync": "svelte-kit sync || true",
    "fix": "bun biome check . --fix --unsafe",
    "fix:safe": "bun biome check . --fix",
    "check": "bun biome check && bun check:svelte",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "lefthook": "^1.11.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "@sveltejs/adapter-cloudflare": "^7.0.1",
    "pixi.js": "^8.9.1"
  }
}
